<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp5.Views.FlashcardsPlay"
             Title="FlashcardsPlay">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <!--flashcardi küs-->
            <Label x:Name="questionLabel" FontSize="24" HorizontalOptions="Center" TextColor="Black" />

            <!-- flashcardi vastus, alguses hidden -->
            <Label x:Name="answerLabel" FontSize="20" HorizontalOptions="Center" IsVisible="False" TextColor="Gray" />

            <!--kuva vastus -->
            <Button Text="Show Answer" Clicked="OnShowAnswerClicked" /> 

            <!-- järgmine kaart -->
            <Button Text="Next" Clicked="OnNextClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>