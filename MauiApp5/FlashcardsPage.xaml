<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp5.Views.FlashcardsPage"
             Title="Flashcards">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Button Text="Add Flashcard Set" Clicked="OnAddFlashcardSetClicked" />

            <CollectionView ItemsSource="{Binding FlashcardSets}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10" Margin="0,10,0,0" BackgroundColor="LightGray">
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                                <Button Text="Delete" Clicked="OnDeleteFlashcardSetClicked" CommandParameter="{Binding .}" />
                            </StackLayout>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
